<Window x:Class="Приложение.Windows.ExitFromEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Приложение"
        mc:Ignorable="d"
        Title="Вы уверены, что сохранили тест?" Height="150" Width="300" ResizeMode="NoResize">
    <Grid>
        <Button Content="Сохранить и выйти" HorizontalAlignment="Left" Margin="10,31,0,0" VerticalAlignment="Top" Click="ExitWithSave"/>
        <Button Content="Выйти" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" Click="ExitWithoutSave"/>
        <Button Content="Не выходить" HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top" Click="Close"/>
    </Grid>
</Window>
